<!--自己的css-->
<link rel="stylesheet" href="/Content/_MyContent/_Global/Content.css"/>
<link rel="stylesheet" href="/Content/_MyContent/_Global/TableHead.css"/>
<!--主体-->
@using NullaGroupHome.Areas.Product
@{
    var modname = this.Request.Params["modname"];
    if (!File.Exists(this.Server.MapPath($"~/Areas/Product/Views/Shared/Product/_Layout{modname}.cshtml")))
    {
        //TODO throw
    }
    ViewBag.Title = "下载";
    Layout = $"~/Areas/Product/Views/Shared/Product/_Layout{modname}.cshtml";
}

<script>
    $("#MenuDownload").addClass("active");
</script>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="content">
                <h3 class="lead">&nbsp;&nbsp;请选择Minecraft的游戏版本：</h3>
                <ul class="ul-content">
                    @{
                        var versions = Directory.GetDirectories(this.Server.MapPath($"/Areas/Product/Files/{modname}")).Select(FileHelper.GetFullFileName);
                        foreach (var version in versions)
                        {
                            //导航
                            <li><a href="#@version.Replace(".",string.Empty)">@version</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    @foreach (var version in versions)
    {
        <h3 class="lead" id="@version.Replace(".", string.Empty)">@($"{modname} for Minecraft {version}:")</h3>
        <br />
        <table class="table table-bordered table-hover">
            <thead class="table-head">
                <script src="/Areas/Product/Scripts/DownloadTableHead.js"></script>
            </thead>
            <tbody>
                @{
                    var mappath = $"/Areas/Product/Files/{modname}/{version}";
                    var files = Directory.GetFiles(this.Server.MapPath(mappath));
                    Array.Sort(files, new FileVersionComparer());
                    foreach (var file in files)
                    {
                        var fileInfo = new FileInfo(file);
                        var fileName = FileHelper.GetFullFileName(file);
                        var modFile = new ModFile(fileName);
                        <tr>
                            <td>@modFile.Type</td>
                            <td><a href="@(mappath + modFile.FileName)">@modFile.FileName</a></td>
                            <td>@fileInfo.GetFileSize()</td>
                            <td>@fileInfo.LastWriteTime.ToShortDateString()</td>
                            <td>@version</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
                    }
</div>
